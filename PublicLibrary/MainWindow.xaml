<Window x:Class="PublicLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PublicLibrary"
        mc:Ignorable="d"
        Title="Public Library" Height="650" Width="650">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Image/60647.jpg"
                            Stretch="UniformToFill">
            </ImageBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition  Height="550"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu x:Name="MainMenu"  
              FontFamily="Bahnschrift Light Condensed"
              FontSize="18">
            <MenuItem Header="Файл" 
                      Height="25" x:Name="miFile"
                      VerticalContentAlignment="Center"></MenuItem>
        </Menu>
        
        <Frame x:Name="MainFrame" Grid.Row="1" 
               NavigationUIVisibility="Hidden"/>
    </Grid>

</Window>
